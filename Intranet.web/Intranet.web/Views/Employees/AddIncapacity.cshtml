@model Intranet.web.Models.AddIncapacityViewModel
@{
    ViewData["Title"] = "Create";
}

<hr />

<form asp-action="AddIncapacity">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Create</h2>
                    <h4>Incapacidad</h4>
                </div>
                <div class="panel-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EmployeeIds" />

                    <partial name="_Incapacity" />
                </div>
                <div class="panel-footer">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Details" asp-route-id="@Model.EmployeeIds" class="btn btn-success">Back to Employed</a>
                    </div>
                </div>
            </div>

            

          

        </div>
    </div>
</form>
@model Intranet.web.Models.AddPersonContactViewModel
@{
    ViewData["Title"] = "Contactos";
}
<section class="content-header">
</section>
<section class="content">
    <div class="container-fluid">

    
            <form asp-action="AddPerson">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-dark">
                            <div class="card-header">
                                <h2>Adicionar persona de contacto</h2>
                               
                            </div>
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="EmployeeId" />

                                <partial name="_Person" />
                            </div>
                            <div class="card-footer">
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                    <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-success">Back to Employed</a>
                                </div>
                            </div>
                        </div>





                    </div>
                </div>
            </form>
    </div>
</section>
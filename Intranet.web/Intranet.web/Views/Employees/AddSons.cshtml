@model Intranet.web.Models.SonsViewModel
@{
    ViewData["Title"] = "Adicionar Hijos";
}

<section class="content-header">
</section>
<section class="content">
    <div class="container-fluid">
        <form asp-action="AddSons">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-dark">
                        <div class="card-header">
                            <h2>Adicionar Hijos</h2>

                        </div>
                        <div class="card-body">


                            <input type="hidden" asp-for="EmployeeId" />
                            <partial name="_Son" />

                        </div>



                        <div class="card-footer">
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-success">Volver Atras</a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </form>
    </div>
</section>
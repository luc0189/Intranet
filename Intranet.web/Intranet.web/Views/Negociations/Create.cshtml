@model Intranet.web.Models.NegociationViewModel

@{
    ViewData["Title"] = "Create";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<section class="content-header">

</section>
<section class="content">
    <div class="container-fluid">
        <form asp-action="Create">
            <div class="row">

                <div class="col-md-12">
                    <div class="card card-dark">
                        <div class="card-header">
                            <h2>Nueva Negociacion</h2>


                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" id="Valida" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            <partial name="_Negociation" />

                        </div>
                        <div class="card-footer">

                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-success">Volver Atras</a>
                            </div>

                        </div>
                    </div>
                </div>


            </div>
        </form>
    </div>
</section>



<div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        setTimeout(function () {
            document.getElementById('Valida').style.display = 'none';
        }, 3000);
        table.column(3).data().sum();
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });
</script>
}

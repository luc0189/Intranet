@model Intranet.web.Models.Compras.PagoViewModel

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="DatePago" class="control-label"></label>
            <input asp-for="DatePago" class="form-control"/>
            <span asp-validation-for="DatePago" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Novedad" class="control-label"></label>
            <textarea asp-for="Novedad" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Novedad" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="DocCobro" class="control-label"></label>
            <input asp-for="DocCobro" class="form-control" />
            <span asp-validation-for="DocCobro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DocLegalizacion" class="control-label"></label>
            <input asp-for="DocLegalizacion" class="form-control" />
            <span asp-validation-for="DocLegalizacion" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="ValorPagado" class="control-label"></label>
            <input asp-for="ValorPagado" class="form-control" />
            <span asp-validation-for="ValorPagado" class="text-danger"></span>
        </div>
    </div>
</div>



@model IEnumerable<Intranet.web.Data.Entities.Credit>

@{
    ViewData["Title"] = "Reporte de Creditos";
}

<section class="content-header">

</section>
<section class="content">
    <div class="container-fluid">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
              <div class="col-md-12">
                <div class="card card-dark">
                    <div class="card-header">
                        Reporte de Creditos
                    </div>
                    <div class="card-body">
                        <div class="table-responsive ">
                            <table class="table table-striped display" id="MyTable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Employee.FullName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CreditEntities.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TotalPrice)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.StartDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EndDate)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Employee.Movil)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                        @*<th>
                                            Acciones
                                        </th>*@

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Employee.FullName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreditEntities.Name)
                                            </td>
                                              <td>
                                                @Html.DisplayFor(modelItem => item.TotalPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StartDate)
                                            </td>
                                            <td id="datefin">
                                                @Html.DisplayFor(modelItem => item.EndDate)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Employee.Movil)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>

                                            @*<td>
                                                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i></a>
                                                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id"><i class="glyphicon glyphicon-list"></i></a>
                                                <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>

                                            </td>*@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
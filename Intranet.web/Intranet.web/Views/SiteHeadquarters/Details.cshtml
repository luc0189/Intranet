@model Intranet.web.Data.Entities.SiteHeadquarters

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>SiteHeadquarters</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="AddArea" class="btn btn-primary" asp-route-id="@Model.Id">Add Area</a> |
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
----------------------------------------------
@if (Model.Areas.Count == 0)
{
    <h5> No Areas added.</h5>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Areas.FirstOrDefault().Nombre)
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Areas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    
                    <td>
                        <a asp-action="EditArea" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                        
                        <a asp-action="DeleteArea" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


